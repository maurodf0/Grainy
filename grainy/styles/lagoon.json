{
    "title": "Lagoon",
	"$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
			"palette": [
				{
					"slug": "background",
					"color": "#1b2c3a",
					"name": "Background"
				},
				{
					"slug": "text",
					"color": "#fffcf8",
					"name": "Background Contrast"
				},
				{
					"slug": "primary",
					"color": "#1985A1",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#c0cef2",
					"name": "Secondary"
				},
				{
					"slug": "contrast",
					"color": "#d7bfed",
					"name": "Contrast"
				}
			]
		}
    },
	"styles": {
		"typography": {
			"fontSize": "var(--wp--preset--font-size--normal)",
			"fontFamily": "var(--wp--preset--font-family--bitter)",
			"lineHeight": "1.6",
			"fontStyle": "normal",
			"fontWeight": "400"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"textDecoration":"underline"
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--text)"
		}
	},
	"blocks": {
		"core/heading": {
			"color": {
				"text": "var(--wp--preset--color--text)"
			}
		},
		"core/query-title": {
			"color": {
				"text": "var(--wp--preset--color--text)"
			},
			"core/post-title": {
				"color" : {
				"text":"var(--wp--preset--color--text)",
				"link": "var(--wp--preset--color--primary)"
				}
			}
		},
		"core/button": {
			"color": {
				"background": "var(--wp--preset--color--background)",
				"text": "var(--wp--preset--color--text)"
			}
		},
		"core/group": {
			"spacing": {
				"padding": {
					"top": "var(--wp--preset--spacing--40)",
					"right": "var(--wp--preset--spacing--40)",
					"bottom": "var(--wp--preset--spacing--40)",
					"left": "var(--wp--preset--spacing--40)"
				}
			},
			"color": {
				"background": "var(--wp--preset--color--background)",
				"text": "var(--wp--preset--color--text)"
			}
		}
	},
	"css": "",
	"spacing": {
		"padding": {
			"top": "0px",
			"right": "0px",
			"bottom": "0px",
			"left": "0px"
		}
	}
}